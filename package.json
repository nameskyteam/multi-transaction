{
  "name": "multi-transaction",
  "version": "6.1.0",
  "license": "MIT",
  "description": "Make the construction of the transaction easier on NEAR blockchain.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup src --minify --dts",
    "prettier": "prettier src/**/*.ts --write",
    "lint": "eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@near-wallet-selector/core": "^8.9.2",
    "bignumber.js": "^9.1.1",
    "bn.js": "^5.2.1",
    "borsher": "^1.2.1",
    "buffer": "^6.0.3",
    "near-api-js": "^2.1.4",
    "snakecase-keys": "^6.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "camelcase-keys": "^9.1.3",
    "eslint": "^8.23.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.1",
    "tsup": "^8.0.2",
    "typescript": "^4.5.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
